<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Tárgy</th>
            <th>Kúrzuskód</th>
            <th>Időpont</th>
            <th>Leírás</th>
            <th>Funkciók</th>
            <th>Hozzászólás</th>
        </tr>   
    </thead>
    <tbody>

        {{#each errors}}
        <tr>
            {{!--{{log this}}--}}
            <td>{{targynev}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{kurzuskod}}</td>
            <td>{{idopont}}</td>
            <td>{{link-to "Megtekint" "errors.view" this class="btn btn-default btn-sm"}}</td>
            <td>{{link-to "Szerkeszt" "errors.edit" this class="btn btn-default btn-sm"}}
                <button {{action "deleteError" this}} class="btn btn-default btn-sm">Töröl</button>
            </td>
            <td>{{link-to "Hozzászólás" "errors.comments.new" this class="btn btn-primary btn-sm"}}</td>
        </tr>
        {{/each}}

    </tbody>
</table>